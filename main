.model small
.stack
.data
	Msg1 db "BatStateU$"
.code
	start:
		mov ah, 06h			;function 06h int 10 for screen processing
		mov bh, 90H			;to change screen attributes, 9H(LightBlue) for Background and 0H(Black) for Text 
		mov cx, 0			;to define screen resolution, ch-00h (row). cl-00h(column)
		mov dx, 184fH			;to define screen resolution, dh=18h(row), dl=4f(column)
		int 10h

		mov ah, 06h
		mov bh, 0E0h
		mov cx, 0014h
		mov dx, 184fH		
		int 10h

		mov ah, 06h
		mov bh, 50H
		mov cx, 0027h
		mov dx, 184fH		
		int 10h

		mov ah, 06h
		mov bh, 30H
		mov cx, 003cH
		mov dx, 184fH		
		int 10h

		mov ah, 02					; resquest to set the cursor position
		mov bh, 0					
		mov dh, 12 					; y position
		mov dl, 30 					; x position
		int 10h

		mov dx, offset msg1
		mov ah,09h
		int 21h

		mov ah, 4ch
		int 21h




	end start

